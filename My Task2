import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int constant = 7;
        
        for (int i=1;i<a; i++)
        {
            constant = (constant*2) + (i);
        }
        System.out.println(constant);
    }
}
